<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart = "@dimen/horizontal_padding"
    android:paddingEnd = "@dimen/horizontal_padding"
    android:paddingTop= "@dimen/vertical_padding"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <EditText
            android:id="@+id/et_serch_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/id_vk_com"
            android:inputType="text"
            android:padding="10dp"
            android:textSize="25sp"></EditText>

        <Button
            android:id="@+id/id_serarch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_search"></Button>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/vertical_padding">
            <TextView
                android:id="@+id/tv_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result_here"
                android:textSize="22sp"
                android:visibility="invisible"/>
        </ScrollView>
        <TextView
            android:id="@+id/id_tw_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:padding="16dp"
            android:text="@string/error_message"
            android:visibility="invisible"/>

        <ProgressBar
            android:id="@+id/id_progress"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:visibility="invisible"/>
    </FrameLayout>

</LinearLayout>